{
  "compilerOptions": {
      "lib": ["ES2022", "DOM"],
      "target": "ES2022",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "strict": true,
      "noImplicitAny": true,
      "declaration": false,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}